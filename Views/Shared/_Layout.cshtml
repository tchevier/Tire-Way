<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]TireWay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TireWay.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" href="~/images/logo.png" type="image/gif">
</head>
<style>
    * {
    font-family: 'Quicksand', sans-serif;
    }
</style>
<body>
    <div class="sidebar">
        <nav class="navbar navbar-light mb-3">
            <div class="d-flex flex-column ms-3 me-3">
                <img class="align-self-center" src="~/images/logo.png" alt="" width="150px" height="100px"/>
                <a class="navbar-brand fst-italic" style="font-size: 3rem; font-weight: bold;" asp-area="" asp-controller="Home" asp-action="Index">TireWay</a>
                <div class="d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-tab">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-tab">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-tab">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tires" asp-action="Index">Tires</a>
                        </li>
                        <li class="nav-tab">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="Index">Stock</a>
                        </li>
                    </ul>
                </div>
        </nav>
        </div>
    </div>
    <div class="banner-top">
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
